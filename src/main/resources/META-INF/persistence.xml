<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="PU_Projet_POO">
            <class>org.example.my_expert_inventory.model.Adresse</class>
            <class>org.example.my_expert_inventory.model.Bien</class>
            <class>org.example.my_expert_inventory.model.Element</class>
            <class>org.example.my_expert_inventory.model.EtatDesLieux</class>
            <class>org.example.my_expert_inventory.model.Minute</class>
            <class>org.example.my_expert_inventory.model.Piece</class>
            <class>org.example.my_expert_inventory.model.TypeDElement</class>

        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/Projet_POO"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="melestyl"/>
            <property name="hibernate.connection.password" value="Melestyl"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.use_sql_comments" value="false"/>

        </properties>
    </persistence-unit>
</persistence>